= form_for [@album, @picture] do |f|
  - if @picture.errors.any?
    #error_explanation
      %h2= "#{pluralize(@picture.errors.count, "error")} prohibited this picture from being saved:"
      %ul
        - @picture.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :file
    = f.file_field :file
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
