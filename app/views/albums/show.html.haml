%p{:style => "color: green"}= notice

%h1= @album.name

.row
  - @album.pictures.each do |picture|
    = render partial: 'albums/picture', locals: {picture: picture}

%div
  = link_to "Upload picture", new_album_picture_path(@album)
  |
  = link_to "Edit this album", edit_album_path(@album)
  |
  = link_to "Back to albums", albums_path
